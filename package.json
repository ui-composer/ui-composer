{
  "name": "@ui-composer/monorepo",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "manypkg check",
    "clean": "./scripts/clean/workspaces.sh",
    "clean:workspace": "./scripts/clean/workspace.mjs",
    "format": "./scripts/format/workspaces.sh",
    "format:workspace": "./scripts/format/workspace.mjs",
    "lint": "./scripts/lint/workspaces.sh",
    "lint:workspace": "./scripts/lint/workspace.mjs",
    "build": "./scripts/build/workspaces.sh",
    "build.packages": "yarn build --no-private",
    "watch": "./scripts/watch/workspaces.mjs",
    "release": "./scripts/release/workspaces.sh",
    "release:workspace": "./scripts/release/workspace.mjs",
    "mobile-app": "yarn workspace @ui-composer/mobile-app",
    "web-app": "yarn workspace @ui-composer/web-app",
    "library": "yarn workspace ui-composer",
    "tokens": "yarn workspace @ui-composer/tokens",
    "website": "yarn workspace @ui-composer/website",
    "debug": "echo $npm_package_version"
  },
  "dependencies": {
    "@manypkg/cli": "^0.19.1",
    "@monorepo-utils/workspaces-to-typescript-project-references": "^2.8.2",
    "@react-native-community/eslint-config": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "concurrently": "^7.2.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-compat": "^4.0.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx": "^0.1.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-mdx": "^2.0.1",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4",
    "zx": "^7.0.7"
  },
  "engines": {
    "node": "16.14.*"
  },
  "packageManager": "yarn@3.2.1",
  "author": "Katherine Martinez <kmartinezmedia@gmail.com>",
  "homepage": "https://github.com/ui-composer/ui-composer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ui-composer/ui-composer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ui-composer/ui-composer"
  },
  "manypkg": {
    "ignoredRules": [
      "INTERNAL_MISMATCH"
    ]
  }
}
