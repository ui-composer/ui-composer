{
  "name": "wordle",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/wordle/src",
  "projectType": "application",
  "targets": {
    "postinstall": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/wordle",
        "command": "echo 'Installed deps for wordle app'"
      }
    },
    "build-ios-dev-client": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/wordle",
        "command": "EAS_LOCAL_BUILD_SKIP_CLEANUP=1 EAS_LOCAL_BUILD_ARTIFACTS_DIR=.expo eas build --profile dev-client --platform ios --local --non-interactive"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/wordle",
        "command": "expo start --dev-client"
      }
    },
    "run-ios": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/wordle",
        "command": "expo run:ios --configuration Release"
      }
    },
    "run-android": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/wordle",
        "command": "expo run:android --configuration Release"
      }
    },
    "build-eas": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/wordle",
        "command": "eas build --profile development"
      },
      "configurations": {
        "all": {
          "command": "--platform all"
        },
        "android": {
          "command": "--platform android"
        },
        "ios": {
          "command": "--platform ios"
        }
      }
    },
    "build-list": {
      "executor": "@nrwl/expo:build-list",
      "options": {}
    },
    "download": {
      "executor": "@nrwl/expo:download",
      "options": {
        "output": "apps/wordle/dist"
      }
    },
    "install": {
      "executor": "@nrwl/expo:install",
      "options": {}
    },
    "update": {
      "executor": "@nrwl/expo:update",
      "options": {}
    },
    "export": {
      "executor": "@nrwl/expo:export",
      "dependsOn": ["^build"],
      "options": {
        "platform": "all",
        "outputDir": "../../dist/apps/wordle"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/wordle/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/wordle/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
