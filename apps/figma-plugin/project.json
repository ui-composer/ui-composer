{
  "root": "apps/figma-plugin",
  "sourceRoot": "apps/figma-plugin/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/figma-plugin",
        "commands": ["vite build", "esbuild ./src/plugin.ts --bundle --outfile=dist/plugin.js"],
        "parallel": true
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/figma-plugin",
        "commands": ["vite preview"]
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/figma-plugin",
        "commands": [
          "yarn nx run ui-composer:watch",
          "esbuild ./src/plugin.ts --bundle --outfile=dist/plugin.js --watch && vite dev"
        ],
        "parallel": true
      }
    }
  }
}
